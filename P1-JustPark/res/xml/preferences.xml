<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory
        android:key="first_category"
        android:title="@string/notifications" >
        <ListPreference
            android:defaultValue="2"
            android:entries="@array/general_interval"
            android:entryValues="@array/order"
            android:key="general_interval"
            android:title="@string/general_interval" />

        <SwitchPreference
            android:defaultValue="true"
            android:key="switch_notifications"
            android:title="@string/switch_notifications" />

        <ListPreference
            android:defaultValue="0"
            android:entries="@array/notificacions_interval"
            android:entryValues="@array/order"
            android:key="notificacions_interval"
            android:title="@string/notifications_interval" />
    </PreferenceCategory>

</PreferenceScreen>